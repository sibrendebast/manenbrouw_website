generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_PRISMA_DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  style       String
  abv         String
  volume      String
  price       Float
  description String
  images      String   // Stored as JSON string
  inStock     Boolean  @default(true)
  stockCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  OrderItem   OrderItem[]
}

model Order {
  id              String      @id @default(uuid())
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String // Stored as JSON string
  shippingMethod  String // "shipment" | "pickup"
  totalAmount     Float
  status          String      @default("pending") // "pending", "pending_payment", "paid", "shipped", "completed", "cancelled"
  stripeSessionId String?
  paymentMethod   String? // "bancontact", "card", "payconiq"
  items           OrderItem[]
  tickets         EventTicket[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String
  isPaid      Boolean  @default(false)
  ticketPrice Float?   // Only for paid events
  capacity    Int?     // Maximum number of attendees
  ticketsSold Int      @default(0)
  image       String?  // Event image URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     EventTicket[]
}

model EventTicket {
  id            String   @id @default(uuid())
  eventId       String
  event         Event    @relation(fields: [eventId], references: [id])
  orderId       String?
  order         Order?   @relation(fields: [orderId], references: [id])
  buyerName     String
  buyerEmail    String
  quantity      Int      @default(1)
  totalPrice    Float
  purchasedAt   DateTime @default(now())
}
