generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  style       String
  abv         String
  volume      String
  price       Float
  description String
  images      String   // Stored as JSON string
  inStock     Boolean  @default(true)
  stockCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  OrderItem   OrderItem[]
}

model Order {
  id              String      @id @default(uuid())
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String // Stored as JSON string
  shippingMethod  String // "shipment" | "pickup"
  totalAmount     Float
  status          String      @default("pending") // "pending", "pending_payment", "paid", "shipped", "completed", "cancelled"
  stripeSessionId String?
  paymentMethod   String? // "bancontact", "card", "payconiq"
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
