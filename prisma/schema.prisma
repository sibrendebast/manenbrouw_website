generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum ProductType {
  BEER
  GIFTBOX
  GLASS
  MERCH
}

model Product {
  id          String      @id @default(uuid())
  slug        String      @unique
  name        String
  category    ProductType @default(BEER)
  style       String?
  abv         String?
  volume      String?
  price       Float
  description String
  images      String // Stored as JSON string
  inStock     Boolean     @default(true)
  stockCount  Int         @default(0)
  isHidden    Boolean     @default(false)
  btwCategory Int?        @default(21) // BTW/VAT percentage: 0, 6, 12, or 21
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
}

model Order {
  id              String      @id @default(uuid())
  orderNumber     String?     @unique // Format: YYYY/####
  customerName    String
  customerEmail   String
  customerPhone   String
  shippingAddress String // Stored as JSON string
  shippingMethod  String // "shipment" | "pickup"
  totalAmount     Float
  status          String      @default("pending") // "pending", "pending_payment", "paid", "shipped", "completed", "cancelled"
  stripeSessionId String?
  paymentMethod   String? // "bancontact", "card", "payconiq"
  invoiceUrl      String?
  items           OrderItem[]
  tickets         EventTicket[]
  locale          String      @default("nl") // "nl" | "en"
  comment         String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id          String  @id @default(uuid())
  orderId     String
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  quantity    Int
  price       Float
  btwCategory Int?    @default(21) // BTW/VAT percentage at time of purchase
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
}

model Event {
  id                   String    @id @default(uuid())
  title                String
  description          String
  date                 DateTime
  location             String
  isPaid               Boolean   @default(false)
  ticketPrice          Float?    // Only for paid events
  capacity             Int?      // Maximum number of attendees
  ticketsSold          Int       @default(0)
  isHidden             Boolean   @default(false)
  image                String?   // Event image URL
  ticketSalesStartDate DateTime? // When tickets become available for purchase
  earlyBirdPrice       Float?    // Discounted price for early bird tickets
  earlyBirdEndDate     DateTime? // Deadline for early bird discount
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  tickets              EventTicket[]
}

model EventTicket {
  id            String   @id @default(uuid())
  eventId       String
  event         Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  orderId       String?
  order         Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  buyerName     String
  buyerEmail    String
  quantity      Int      @default(1)
  totalPrice    Float
  purchasedAt   DateTime @default(now())
}

model AdminUser {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pushSubscriptions PushSubscription[]
}

model PushSubscription {
  id        String    @id @default(uuid())
  endpoint  String
  keys      Json      // Stores p256dh and auth keys
  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id], onDelete: Cascade)
}
